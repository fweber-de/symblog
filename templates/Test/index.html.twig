{% extends 'layout.html.twig' %}

{% block content %}

    <br>
    <br>

    {% for post in posts %}
        <div class="post">
            <a href="{{ path('blog_post_show', {slug: post.slug}) }}">{{ post.title }}</a>
            - {{ post.publishDate|date('d.m.Y G:i:s') }}
            <small class="text-muted">by {{ post.author.username }}</small>

            <hr>
        </div>
    {% endfor %}

{% endblock %}
