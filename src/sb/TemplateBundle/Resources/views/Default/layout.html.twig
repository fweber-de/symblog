{% extends '::base.html.twig' %}

{% block viewport %}
    <meta name="viewport" content="width=device-width, initial-scale=1">
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ path('sb_template_css', {templateName: template.identifier, fileName: 'bootstrap.min.css'}) }}">
    <link rel="stylesheet" href="{{ path('sb_template_css', {templateName: template.identifier, fileName: 'app.css'}) }}">
{% endblock %}

{% block javascripts %}
    <script src="{{ path('sb_template_js', {templateName: template.identifier, fileName: 'jquery-2.1.1.min.js'}) }}"></script>
    <script src="{{ path('sb_template_js', {templateName: template.identifier, fileName: 'bootstrap.min.js'}) }}"></script>
    <script src="{{ path('sb_template_js', {templateName: template.identifier, fileName: 'app.js'}) }}"></script>
{% endblock %}

{% block body %}

    <div class="container-fluid">
        <div class="col-lg-12">

            <div class="header">
                <h1>SymBlog</h1>
            </div>

            <div class="navigator">
                <a href="{{ path('blog_index') }}">Blog</a>
            </div>

            <div class="content">
                {% block content %}{% endblock %}
            </div>

        </div>
    </div>

{% endblock %}
