{% extends 'sbAdminBundle::layout.html.twig' %}

{% block title %}BlogAdmin &middot; Delete Post '{{ post.slug }}'{% endblock %}

{% block currentPage %}posts{% endblock %}

{% block content %}

    <div class="panel panel-danger">
        <div class="panel-heading">
            <h3 class="panel-title">Delete Post '{{ post.slug }}'</h3>
        </div>
        <div class="panel-body">

            <form method="post" role="form">
                <input type="hidden" name="sent" value="1">
                <button type="submit" class="btn btn-danger"><i class="fa fa-trash"></i> Delete</button>
                <a href="{{ path('admin_posts_collection') }}" class="btn btn-default"><i class="fa fa-chevron-circle-left"></i> Back</a>
            </form>

        </div>
    </div>

{% endblock %}
