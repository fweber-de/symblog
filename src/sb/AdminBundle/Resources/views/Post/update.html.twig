{% extends 'sbAdminBundle::layout.html.twig' %}

{% block title %}BlogAdmin &middot; Update Post '{{ post.slug }}'{% endblock %}

{% block currentPage %}posts{% endblock %}

{% block content %}

    <script src="{{ asset('assets/pages/admin/js/posts.js') }}"></script>

    <div class="panel panel-warning">
        <div class="panel-heading">
            <h3 class="panel-title">Update Post '{{ post.slug }}'</h3>
        </div>
        <div class="panel-body">

            <form id="form-post" method="post" role="form">
                <div class="form-group">
                    <label for="input-title">Title</label>
                    <input type="text" class="form-control" id="input-title" name="title" value="{{ post.title }}">
                </div>
                <div class="form-group">
                    <label for="input-text">Post</label>
                    <div class="sb-editor">{{ post.text|raw }}</div>
                    <textarea class="hidden" id="input-text" name="text">{{ post.text|raw }}</textarea>
                </div>
                <input type="hidden" name="sent" value="1">
                <button type="submit" class="btn btn-success"><i class="fa fa-save"></i> Save</button>
            </form>

        </div>
    </div>

{% endblock %}
